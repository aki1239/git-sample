<link type="text/css" rel="stylesheet" href="chat_room.css" />


<h2 style= "text-align:center"><%="#{hoge}さんとのチャット"%></h2>
<div id="chats">
  <% @chats.each do |chat| %>
   <%if chat.user_id==current_user.id%>
    <div class="comment_user">
        <p><%=chat.sentence%></p>
    </div>
   <%else%>
    <div class="fukidashi">
      <div class="icon">
        <img scr="/" alt="ゲスト">
      </div>
      <div class="chatting">
        <div class="says">
          <p>
            <%=chat.sentence%>
          </p>
        </div>
      </div>
    </div>
   <% end %>
  <% end %>
  </div>

  
<form id="send-form">
  <input type="text" id="hoge" placeholder="入力" style="width:30%;">
  <input id="send_btn" type="submit" value="送信" id="send">
  <input id="current_user_id" type="hidden" value= "<%=current_user.id%>">
  <input id="hoge_id" type="hidden" value= "<%=@partner.id%>">
</form>  